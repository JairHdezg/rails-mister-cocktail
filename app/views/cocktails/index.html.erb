<div class="index">
  <%= render "shared/navbar" %>
  <div class="container">
    <h2 class=" my-4 pb-2"></h2>
    <div class="row">
      <div class="col-12 col-md-4">
        <%= link_to 'New cocktail', new_cocktail_path, :class => "btn btn-light" %>

      </div>
      <div class="col-12 col-md-8 container ">
        <h2 id="cocktails-title" class="border-bottom pb-2 mb-2 text-white">All our cocktails</h2>
        <div class="row justify-content-center cocktails">
          <% @cocktails.each do |cocktail| %>
            <div class="col-10 col-md-8 col-lg-6 col-xl-4 my-2">
              <div class="cocktail-card">
                <%= link_to cocktail_path(cocktail) do %>
                  <div class="card-image d-flex align-items-end justify-content-end" style="background-image: linear-gradient(45deg, rgba(230,230,230,.1), rgba(80,80,80,.2)), url('<%= cocktail.picture_url %>');">
                    <h3 class="mt-1 card-info"><%= cocktail.name.capitalize %></h3>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
