<%= render "shared/navbar-black" %>
<div class="container">
  <div class="row justify-content-center ">
    <div class="col-10 col-sm-6 my-5 new-form">
      <h2 class="my-3">New Cocktail</h2>
      <%= simple_form_for(@cocktail) do |f| %>
        <div class="form-group mt-3">
          <%= f.label :name %>
          <%= f.text_field :name, :class => 'form-control form-control-sm' %>
        </div>
        <div class="form-group mt-3">
          <%= f.input :photo, as: :file, :class => 'custom-file-label'%>
        </div>
          <%= f.submit :class => 'btn btn-dark mt-5 btn-block'%>
      <% end %>
    </div>
  </div>
</div>
