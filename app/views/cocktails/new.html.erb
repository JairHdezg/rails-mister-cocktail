<div class="container">
  <h2 class="my-3">New Cocktail</h2>
  <%= simple_form_for(@cocktail) do |f| %>
    <div class="form-group mt-3">
      <%= f.label :name %>
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <div class="form-group mt-3">
      <%= f.label 'Picture' %>
      <%= f.text_field :picture_url, :class => 'form-control' %>
    </div>
      <%= f.submit :class => 'btn btn-primary mt-3'%>
  <% end %>
</div>
